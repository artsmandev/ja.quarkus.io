#!/usr/bin/env bash
set -eu

#
# This script re-translates untranslated messages in the .po files.
#

SCRIPT_DIR=$(cd $(dirname $0); pwd)
L10N_HOME=$(cd $(dirname $SCRIPT_DIR); pwd)
cd $L10N_HOME

export TARGET_LANG=`jq ".targetLang" config/l10n-kit.json -r`

bin/purge-fuzzy-messages

bin/exec-po4a-updatepo

bin/apply-tmx
bin/machine-translate
