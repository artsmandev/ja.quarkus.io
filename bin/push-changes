#!/usr/bin/env bash
set -eu

#
# This script pushes changes to git remote repository.
# This is designed to be used in CI workflow only. DO NOT call manually.
#

SCRIPT_DIR=$(cd $(dirname $0); pwd)
L10N_HOME=$(cd $(dirname $SCRIPT_DIR); pwd)
cd $L10N_HOME

git add upstream
git add l10n

set +e
git diff --cached --exit-code --quiet

if [[ $? -eq 1 ]] ; then
  set -e
  git commit -m "$1"
  git fetch
  git rebase origin/main
  git push origin main
fi
set -e
