#!/usr/bin/env python

from xml.dom.minidom import parse
import os
import codecs

tmxFilePath = os.path.join(os.path.dirname(__file__), '../l10n/tmx/quarkus.tmx')

dom = parse(tmxFilePath)
body = dom.getElementsByTagName('body')[0]
body.childNodes.sort(key=lambda item: len(item.toxml()))
file = codecs.open(tmxFilePath, 'w', 'utf-8')
dom.writexml(file)
file.close()
