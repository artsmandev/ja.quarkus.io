#!/usr/bin/env bash
set -eu

SCRIPT_DIR=$(cd $(dirname $0); pwd)
L10N_HOME=$(cd $(dirname $SCRIPT_DIR); pwd)
cd $L10N_HOME

source config/l10n-kit.conf

pretranslate --similarity=$SIMILARITY --tm=$TMX_FILE_PATH --template=l10n/po/ja_JP --input=l10n/po/ja_JP --output=l10n/po/ja_JP

for ITEM in `\find l10n/po/$TARGET_LANG -name "*.po"`; do
  if [ -f $ITEM ] ; then
    echo $ITEM
    msgcat --to-code=utf-8 --no-wrap -o $ITEM $ITEM
  fi
done
