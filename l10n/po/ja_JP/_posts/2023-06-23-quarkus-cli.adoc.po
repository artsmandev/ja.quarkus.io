msgstr ""

#. type: delimited block -
#: upstream/_posts/2023-06-23-quarkus-cli.adoc:513
#, no-wrap
msgid ""
"wait_for_port() {\n"
"    local PORT=$1\n"
"    local TIMEOUT=5\n"
"    local START_TIME=$SECONDS\n"
"    while :\n"
"    do\n"
"        if nc -v $1 &> /dev/null; then\n"
"            nc -z localhost $PORT  && return\n"
"        fi\n"
