#: upstream/_versions/main/guides/grpc-service-implementation.adoc:53
#, no-wrap
msgid ""
"import io.quarkus.grpc.GrpcService;\n"
"import hello.Greeter;\n"
msgstr ""

#. type: delimited block -
#: upstream/_versions/main/guides/grpc-service-implementation.adoc:56
#, no-wrap
msgid ""
"@GrpcService <1>\n"
"public class HelloService implements Greeter { <2>\n"
msgstr ""

#. type: delimited block -
#: upstream/_versions/main/guides/grpc-service-implementation.adoc:64
#, no-wrap
msgid ""
"    @Override\n"
"    public Uni<HelloReply> sayHello(HelloRequest request) {\n"
"        return Uni.createFrom().item(() ->\n"
"                HelloReply.newBuilder().setMessage(\"Hello \" + request.getName()).build()\n"
"        );\n"
"    }\n"
"}\n"
msgstr ""

