msgstr ""
"import javax.enterprise.context.ApplicationScoped;\n"
"import java.time.Duration;\n"
"import java.util.Random;\n"

#. type: delimited block -
#: upstream/_versions/2.7/guides/kafka.adoc:713
#, no-wrap
msgid ""
"@ApplicationScoped\n"
"public class KafkaPriceProducer {\n"
msgstr ""
"@ApplicationScoped\n"
"public class KafkaPriceProducer {\n"

#. type: delimited block -
#: upstream/_versions/2.7/guides/kafka.adoc:715
#: upstream/_versions/2.7/guides/kafka.adoc:1016
#, no-wrap
msgid "    private final Random random = new Random();\n"
msgstr "    private final Random random = new Random();\n"

#. type: delimited block -
#: upstream/_versions/2.7/guides/kafka.adoc:723
#, no-wrap
msgid ""
"    @Outgoing(\"prices-out\")\n"
