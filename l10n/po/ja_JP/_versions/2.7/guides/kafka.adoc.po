"mp.messaging.incoming.my-channel.kafka-configuration=my-configuration\n"
msgstr ""
"mp.messaging.incoming.my-channel.connector=smallrye-kafka\n"
"mp.messaging.incoming.my-channel.kafka-configuration=my-configuration\n"

